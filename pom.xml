	</parent>
	<groupId>com.plazoleta</groupId>
	<artifactId>demo</artifactId>
	<version>0.0.1-SNAPSHOT</version>
	<name>pragma</name>
	<description>Reto plazoleta de comidas</description>
	<url/>
	<licenses>
		<license/>
