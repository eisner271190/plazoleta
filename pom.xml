				<version>2023.0.3</version>
				<!-- Cambia a la versiÃ³n de Spring Cloud que prefieras -->
				<type>pom</type>
				<scope>import</scope>
			</dependency>
		</dependencies>
	</dependencyManagement>
	<dependencies>
            <!-- JUnit 5 -->
            <dependency>
                <groupId>org.junit.jupiter</groupId>
